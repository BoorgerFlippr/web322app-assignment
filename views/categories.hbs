<div class="row">
    <div class="col-md-12">
          <h2>Categories <a href="/categories/add" class="btn btn-success pull-right">Add Category</a></h2>
          <hr />
          <div class="col-md-12">
              <table class="table ">
                  <thead>
                    <tr>
                        <th>Post&nbsp;ID</th>
                        <th>Title</th>
                    </tr>
                    </thead>
                    {{#each categories}}
                    <tbody>
                    <tr>
                        <td><a href="/posts?category={{id}}">{{id}}</a></td>
                        <td><a href="/posts?category={{id}}">{{category}}</a></td>
                        <td><a class="btn btn-danger" href="/categories/delete/{{id}}">remove</a></td>
                    </tr>
                </tbody>
                {{/each}}
              </table>
          </div>
    </div>
    {{#unless unless}}
    <div class="col-md-12 text-center">
            <strong>{{message}}</strong>
    </div>
    {{/unless}}

</div>
