<div class="row">
    <div class="col-md-12">
          <h2>Categories</h2>
          <hr />
          <div class="table-responsive">
            <table class="table ">
                <thead>
                    <tr>
                        <th>Post&nbsp;ID</th>
                        <th>Title</th>
                    </tr>
                </thead>
                {{#each categories}}
                <tbody>
                    <tr>
                        <td><a href="/posts?category={{category}}">{{id}}</a></td>
                        <td><a href="/posts?category={{category}}">{{category}}</a></td>
                    </tr>
                </tbody>
                {{/each}}
    </div>
    {{#unless unless}}
    <div class="col-md-12 text-center">
            <strong>{{message}}</strong>
    </div>
    {{/unless}}
</div>
