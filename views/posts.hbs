<div class="row">
    <div class="col-md-12">
          <h2>Posts</h2>
          <hr />
          <div class="table-responsive">
            <table class="table ">
                <thead>
                    <tr>
                        <th>Post&nbsp;ID</th>
                        <th>Title</th>
                        <th>Post&nbsp;Date</th>
                        <th>Category</th>
                        <th>Published</th>
                    </tr>
                </thead>
                {{#each posts}}
                <tbody>
                    <tr>
                        <td>{{id}}</td>
                        <td>{{title}}</td>
                        <td>{{postDate}}</td>
                        <td><a href="/posts?category={{category}}">{{category}}</a></td>
                        <td>{{published}}</td>
                    </tr>
                </tbody>
                {{/each}}
    </div>
    {{#unless posts}}
    <div class="col-md-12 text-center">
            <strong>{{message}}</strong>
    </div>
    {{/unless}}
</div>
